<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WorkerActivity"
        android:id="@+id/activity_worker">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="347dp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/activity_worker_work_list">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activity_worker_row"/>
    </LinearLayout>
    <Button
            android:text="Добавить"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/activity_worker_button_addwork"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_worker_work_list"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/activity_worker_date_price" android:layout_marginBottom="148dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_worker_label_date" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Финансовые показатели"
            android:textSize="8pt"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_worker_label_price" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/activity_worker_date_price"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"/>
    <TextView
            tools:text="Заработано за период: 16800 руб."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#51A505"
            android:id="@+id/activity_worker_price_org" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_worker_date_price"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"/>
    <TextView
            tools:text="Получено за период: 8000 руб."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0532A5"
            android:id="@+id/activity_worker_price_worker" android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_worker_price_org"/>
    <TextView
            android:text="От даты"
            android:textSize="8pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_worker_label_date" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_worker_label_price"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:textSize="10pt"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content" android:id="@+id/activity_worker_label_user"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            tools:text="Рабочее окно сотрудника: Alex"/>
</androidx.constraintlayout.widget.ConstraintLayout>