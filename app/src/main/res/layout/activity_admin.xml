<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminActivity">

    <Button
            android:text="Зарплаты"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_admin_button_salary"
            android:textSize="22sp"
            android:background="@drawable/buttons_style"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Работы"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/activity_admin_button_works"
            android:layout_marginTop="44dp"
            android:textSize="22sp"
            android:background="@drawable/buttons_style"
            app:layout_constraintTop_toBottomOf="@+id/activity_admin_button_salary"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Сотрудники"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/activity_admin_button_users"
            android:layout_marginTop="60dp"
            android:textSize="22sp"
            android:background="@drawable/buttons_style"
            app:layout_constraintTop_toBottomOf="@+id/activity_admin_button_works"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>