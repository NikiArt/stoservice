<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content" android:id="@+id/work_order_item">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="195dp"
                android:layout_height="wrap_content" android:id="@+id/work_order_item_car"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                tools:text="Green Bugatti"/>
        <TextView
                android:layout_width="141dp"
                android:layout_height="wrap_content" android:id="@+id/work_order_item_price"
                tools:text="7 058 руб" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/work_order_item_user"
                android:layout_marginStart="32dp" app:layout_constraintStart_toEndOf="@+id/work_order_item_date"/>
        <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content" android:id="@+id/work_order_item_user"
                tools:text="Alex" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/work_order_item_car"
                android:layout_marginStart="8dp"/>
        <TextView
                android:layout_width="140dp"
                android:layout_height="19dp" android:id="@+id/work_order_item_date"
                android:layout_marginTop="16dp"
                tools:text="02/04/2019"
                app:layout_constraintTop_toBottomOf="@+id/work_order_item_car"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
        <ImageView
                android:layout_width="52dp"
                android:layout_height="50dp" app:srcCompat="@android:drawable/presence_online"
                android:id="@+id/work_order_item_image_done"
                app:layout_constraintStart_toEndOf="@+id/work_order_item_car" android:layout_marginStart="128dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>