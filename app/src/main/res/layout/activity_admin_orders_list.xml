<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AdminUserList">



    <TextView
            android:text="Выполненные работы"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_height="wrap_content" android:id="@+id/textView8"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="Отбор по сотруднику: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9"
                android:layout_gravity="center"/>
        <EditText
                android:inputType="none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/activity_admin_orders_list_selection"
                android:layout_gravity="center"
                android:layout_weight="0.4"/>
        <ImageButton
                android:layout_width="37dp"
                android:layout_height="37dp"
                app:srcCompat="@android:drawable/ic_notification_clear_all"
                android:background="#00FFFFFF"
                android:id="@+id/activity_admin_orders_list_clear_selection"
                android:layout_gravity="center"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_admin_orders_list_list"
            tools:layout_editor_absoluteX="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>