<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.UserRegFragment"
             android:id="@+id/fragment_user_reg">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D3380000">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:ems="10"
                android:id="@+id/fragment_user_reg_login"
                android:layout_marginTop="152dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.807"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:ems="10"
                android:id="@+id/fragment_user_reg_password"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_user_reg_login"
                app:layout_constraintHorizontal_bias="0.807"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#ffffff"
                android:ems="10"
                android:id="@+id/fragment_user_reg_password_repeat"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_user_reg_password"
                app:layout_constraintHorizontal_bias="0.807"
                android:layout_marginTop="8dp"/>
        <TextView
                android:text="Пароль"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_user_reg_label_password"
                android:textColor="#ffffff"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_user_reg_label_login"
                app:layout_constraintEnd_toStartOf="@+id/fragment_user_reg_password"
                android:layout_marginEnd="12dp"/>
        <TextView
                android:text="Повторите пароль"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_user_reg_label_password_repeat"
                android:textColor="#ffffff"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_user_reg_label_password"
                app:layout_constraintEnd_toStartOf="@+id/fragment_user_reg_password_repeat"
                android:layout_marginEnd="12dp"/>
        <TextView
                android:text="Имя пользователя"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_user_reg_label_login"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toStartOf="@+id/fragment_user_reg_login" android:layout_marginEnd="12dp"
                android:layout_marginTop="164dp" app:layout_constraintTop_toTopOf="parent"/>
        <Button
                android:text="Добавить"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/fragment_user_reg_button_add"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="36dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_user_reg_password_repeat"
                app:layout_constraintHorizontal_bias="0.498"/>
        <TextView
                android:text="Регистрация нового пользователя"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="12pt"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:id="@+id/fragment_user_reg_label"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>